{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "types": ["node", "jest"],
    "lib": ["ES6"]
  },
  "include": ["src/**/*"],
  "exclude": ["tests"]
}
